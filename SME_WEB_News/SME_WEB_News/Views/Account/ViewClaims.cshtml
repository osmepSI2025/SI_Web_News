@using System.Security.Claims
@{
    ViewData["Title"] = "User Claims";
    var claims = (IEnumerable<Claim>)ViewBag.Claims;
}

<h2>User Claims</h2>
@if (claims != null && claims.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Type</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var claim in claims)
        {
            <tr>
                <td>@claim.Type</td>
                <td>@claim.Value</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No claims found for this user.</p>
}