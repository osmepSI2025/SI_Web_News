@model SME_WEB_News.Models.ViewPopupModels
@{
    ViewData["Title"] = "จัดการ Popup";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    var searchNameTitle = Context.Request.Query["searchNameTitle"].ToString();
    var DDLStatus = @ViewBag.DDLStatus;
}
<style>
    .switch {
        position: relative;
        display: inline-block;
        width: 46px;
        height: 24px;
        vertical-align: middle;
    }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: .4s;
        border-radius: 24px;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 18px;
            width: 18px;
            left: 3px;
            bottom: 3px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

    input:checked + .slider {
        background-color: #20CBA8;
    }

        input:checked + .slider:before {
            transform: translateX(22px);
        }

    .custom-modal-width {
        max-width: 60%; /* หรือขนาดที่ต้องการ */
    }
</style>
<script>
    function toggleActive(id, isActive) {
        $.ajax({
            url: '/Popup/ToggleActive',
            type: 'POST',
            data: { id: id, isActive: isActive },
            success: function (res) {
                if (res.success) {
                    alert('บันทึกสำเร็จ');
                    location.reload();
                } else {
                    alert(res.message || 'เกิดข้อผิดพลาดในการอัปเดตสถานะ');
                    location.reload();
                }
            },
            error: function () {
                alert('เกิดข้อผิดพลาดในการอัปเดตสถานะ');
                location.reload();
            }
        });
    }
</script>
<div class="main-content">
    <div class="wrap-boder">
        <div class="wrap-content">
            <div class="header">
                <div class="nav-navigation">
                    <p class="m-r-10">HOME </p> <p>></p>
                    <p class="m-l-10"> จัดการ Popup</p>
                </div>
                <div class="header_content">
                    <h1>จัดการ Popup</h1>
                </div>
            </div>
