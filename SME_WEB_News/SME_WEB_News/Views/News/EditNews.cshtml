                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>กลุ่มข่าวสาร</label>

                            @*     <select asp-for="MNewsModels.CatagoryCode" asp-items="DDLCategory" id="MNewsModels_CatagoryCode" class="form-control" value="@Model.MNewsModels.CatagoryCode">
                                </select> *@
