<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

@using (Html.BeginForm("PreviewNews", "News", FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data" }))
{
    <div class="wrap_main_normal">
        <div class="header">
            <div class="nav-navigation justify-content-end">
                <p class="m-r-10">HOME</p>
                <p>&gt;</p>
                <p class="m-l-10">ข่าวสาร และ ประชาสัมพันธ์</p>
            </div>
        </div>
        <div class="headtoppic-color">
            <h2>@Model.ListTMNewsModels[0].ArticlesTitle</h2>
            <p>
                @Model.ListTMNewsModels[0].ArticlesAutherName
                @Model.ListTMNewsModels[0].PublishDate?.ToString("dd/MM/yyyy")
            </p>
        </div>
        <div class="picture_toppic_preview">
            <img class="img-size-main" src="@Model.ListTMNewsModels[0].CoverFilePath" alt="news image" />
        </div>
    
        <div class="news-content">
            @Html.Raw(Model.ListTMNewsModels[0].ArticlesContent)
        </div>
       
        @if (!string.IsNullOrEmpty(Model.ListTMNewsModels[0].PicNewsFilePath))
        {
            <div class="picture_toppic" style="display:flex; flex-wrap:wrap; gap:10px; margin-bottom:24px;">
                @foreach (var imgPath in Model.ListTMNewsModels[0].PicNewsFilePath.Split(',', StringSplitOptions.RemoveEmptyEntries))
                {
                    <img src="@imgPath"
                         alt="news image"
                         style="max-width:180px; max-height:180px; border-radius:8px; object-fit:cover; cursor:pointer;"
                         data-bs-toggle="modal"
                         data-bs-target="#imagePreviewModal"
                         onclick="showImageModal('@imgPath')"
                         role="button"
                         tabindex="0" />
                }
            </div>
        }
        @if (Model.ListTMNewsModels[0].FileNameOriginal != null)
        {
            <div class="download-section">
                <div class="download-header">
                    <h3 style="margin:0;">ดาวน์โหลด</h3>
                </div>
                @foreach (var item in Model.DownloadList)
                {
                    <div class="download-card">
                        <div class="download-icon">
                            <div class="file-type">@item.FileType</div>
                        </div>
                        <div class="download-info">
                            <div class="file-title">@item.FileName</div>
                        </div>
                        <div class="download-action">
                            <a href="@item.FileUrl" class="btn btn-primary" download="@item.FileName">ดาวน์โหลด</a>
                        </div>
                    </div>
                }
            </div>
        }
        @* <div class="date-section">
            <div><strong>Start Date:</strong> @Model.ListTMNewsModels[0].StartDate?.ToString("dd/MM/yyyy")</div>
            <div><strong>End Date:</strong> @Model.ListTMNewsModels[0].EndDate?.ToString("dd/MM/yyyy")</div>
        </div> *@
    </div>

}

<!-- Image Preview Modal (อยู่นอกฟอร์ม) -->
<div class="modal fade" id="imagePreviewModal" tabindex="-1" aria-labelledby="imagePreviewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="background:transparent; border:none; box-shadow:none;">
            <div class="modal-body text-center" style="padding:0;">
                <img id="modalImage" src="" alt="news image" style="max-width:100%; max-height:80vh; border-radius:12px; box-shadow:0 2px 8px rgba(0,0,0,0.2);" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showImageModal(imgSrc) {
            document.getElementById('modalImage').src = imgSrc;
        }
        var imagePreviewModal = document.getElementById('imagePreviewModal');
        if (imagePreviewModal) {
            imagePreviewModal.addEventListener('hidden.bs.modal', function () {
                document.getElementById('modalImage').src = '';
            });
        }
    </script>
}