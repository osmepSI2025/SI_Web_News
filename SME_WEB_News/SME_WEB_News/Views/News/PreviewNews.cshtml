@model SME_WEB_News.Models.ViewMNewsModels
@{
    ViewData["Title"] = "Preview News";
}
<style>
    body {
        background: #f5f7fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .wrap_main_normal {
        background: #fff;
        max-width: 900px;
        margin: 40px auto 40px auto;
        border-radius: 16px;
        box-shadow: 0 4px 24px rgba(0,0,0,0.08);
        padding: 32px 32px 24px 32px;
    }

    .header {
        margin-bottom: 16px;
    }

    .nav-navigation {
        display: flex;
        align-items: center;
        font-size: 15px;
        color: #888;
    }

    .m-r-10 {
        margin-right: 10px !important;
    }

    .m-l-10 {
        margin-left: 10px !important;
    }

    .headtoppic-color {
        border-bottom: 1px solid #e0e0e0;
        margin-bottom: 24px;
        padding-bottom: 12px;
    }

        .headtoppic-color h2 {
            font-size: 2rem;
            color: #007bce;
            margin-bottom: 8px;
        }

        .headtoppic-color p {
            color: #666;
            font-size: 1rem;
            margin-bottom: 0;
        }

    .picture_toppic {
        text-align: center;
        margin-bottom: 24px;
    }

    .img-size-main {
        max-width: 100%;
        max-height: 350px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.07);
        object-fit: cover;
    }

    .news-content {
        font-size: 1.08rem;
        color: #222;
        margin-bottom: 32px;
        line-height: 1.7;
        word-break: break-word;
    }

    .download-section {
        margin: 40px 0 32px 0;
    }

    .download-header {
        background: #007bce;
        color: #fff;
        padding: 16px;
        border-radius: 8px 8px 0 0;
        font-size: 1.2rem;
        font-weight: 500;
        letter-spacing: 1px;
    }

    .download-card {
        display: flex;
        align-items: center;
        border: 1px solid #e0e0e0;
        border-radius: 12px;
        margin: 0 0 16px 0;
        padding: 16px;
        background: #fafbfc;
        box-shadow: 0 1px 4px rgba(0,0,0,0.04);
        transition: box-shadow 0.2s;
    }

        .download-card:hover {
            box-shadow: 0 4px 16px rgba(0,123,206,0.08);
        }

    .download-icon {
        width: 70px;
        height: 70px;
        background: #0080d6;
        color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        font-size: 28px;
        font-weight: bold;
        margin-right: 24px;
    }

    .file-type {
        font-size: 28px;
    }

    .download-info {
        flex: 1;
    }

    .file-title {
        font-size: 18px;
        font-weight: 600;
        color: #222;
    }

    .file-meta {
        color: #666;
        font-size: 14px;
        margin-top: 6px;
    }

    .download-action {
        margin-left: 16px;
    }

    .btn-primary {
        background: #0080d6;
        color: #fff;
        border: none;
        border-radius: 24px;
        padding: 10px 32px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        text-decoration: none;
        transition: background 0.2s;
        box-shadow: 0 2px 8px rgba(0,128,214,0.08);
    }

        .btn-primary:hover {
            background: #005fa3;
        }

    .date-section {
        margin-top: 32px;
        display: flex;
        gap: 32px;
        font-size: 1rem;
        color: #444;
    }
  
</style>
<style>
    @@media (max-width: 600px) {
        .wrap_main_normal

    {
        padding: 12px 4px;
    }

    .download-card {
        flex-direction: column;
        align-items: flex-start;
    }

    .download-action {
        margin-left: 0;
        margin-top: 12px;
    }

    }
</style>
@using (Html.BeginForm("PreviewNews", "News", FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data" }))
{
    <div class="wrap_main_normal">
        <div class="header">
            <div class="nav-navigation justify-content-end">
                <p class="m-r-10">HOME</p>
                <p>&gt;</p>
                <p class="m-l-10">ข่าวสาร และ ประชาสัมพันธ์</p>
            </div>
        </div>
        <div class="headtoppic-color">
            <h2>@Model.ListTMNewsModels[0].ArticlesTitle</h2>
            <p>
                @Model.ListTMNewsModels[0].ArticlesAutherName
                @Model.ListTMNewsModels[0].PublishDate?.ToString("dd/MM/yyyy")
            </p>
        </div>
        <div class="picture_toppic">
            <img class="img-size-main" src="@Model.ListTMNewsModels[0].CoverFilePath" alt="news image" />
        </div>
        <div class="news-content">
            @Html.Raw(Model.ListTMNewsModels[0].ArticlesContent)
        </div>
        @if (Model.ListTMNewsModels[0].FileNameOriginal != null)
        {
            <div class="download-section">
                <div class="download-header">
                    <h3 style="margin:0;">ดาวน์โหลด</h3>
                </div>
                @foreach (var item in Model.DownloadList)
                {
                    <div class="download-card">
                        <div class="download-icon">
                            <div class="file-type">@item.FileType</div>
                        </div>
                        <div class="download-info">
                            <div class="file-title">@item.FileName</div>
                        </div>
                        <div class="download-action">
                            <a href="@item.FileUrl" class="btn btn-primary" download="@item.FileName">ดาวน์โหลด</a>
                        </div>
                    </div>
                }
            </div>
        }
        <div class="date-section">
            <div><strong>Start Date:</strong> @Model.ListTMNewsModels[0].StartDate?.ToString("dd/MM/yyyy")</div>
            <div><strong>End Date:</strong> @Model.ListTMNewsModels[0].EndDate?.ToString("dd/MM/yyyy")</div>
        </div>
    </div>
}