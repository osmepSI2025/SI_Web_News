                if (endDate < startDate) {
                    isValid = false;
                    messages.push('วันสิ้นสุดต้องมากกว่าหรือเท่ากับวันเริ่มต้น');
                }
            }

            // ตรวจสอบวันเริ่มต้นและวันที่เผยแพร่
            if (publishDate && startDate) {
