                messages.push('กรุณากรอกหัวข้อข่าวสาร');
            }
            if (!$('#MNewsModels_ArticlesShortDescription').val().trim()) {
                isValid = false;
                messages.push('กรุณากรอกข้อความอธิบายอย่างสั้น');
            }
            // Check Quill editor content
            if (!window.quill || !window.quill.getText().trim() || window.quill.getText().trim() === '') {
                isValid = false;
                messages.push('กรุณากรอกเนื้อหาข่าวสาร');
            }
            if (!$('#Ins_publishDate').val()) {
                isValid = false;
                messages.push('กรุณาเลือกวันที่เผยแพร่');
            }
            if (!$('#Ins_startdate').val()) {
                isValid = false;
                messages.push('กรุณาเลือกวันเริ่มต้น');
            }
            if (!$('#Ins_enddate').val()) {
                isValid = false;
                messages.push('กรุณาเลือกวันสิ้นสุด');
            }

            // ตรวจสอบวันเริ่มต้นและวันสิ้นสุด
            const publishDate = $('#Ins_publishDate').val();
            const startDate = $('#Ins_startdate').val();
            const endDate = $('#Ins_enddate').val();

