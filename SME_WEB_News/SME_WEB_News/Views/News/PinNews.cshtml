<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
<script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>
<style>
    .col-no {
        display: none;
    }

    #actionButtons {
        display: none;
    }

    .wrap-modal {
        padding: 1rem;
        background: linear-gradient(to right, #255D80, #0F334A);
    }

    .switch {
        position: relative;
        display: inline-block;
        width: 46px;
        height: 24px;
        vertical-align: middle;
    }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: .4s;
        border-radius: 24px;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 18px;
            width: 18px;
            left: 3px;
            bottom: 3px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

    input:checked + .slider {
        background-color: #20CBA8;
    }

        input:checked + .slider:before {
            transform: translateX(22px);
        }
</style>
<script>
      function toggleActivePin(id, isActive) {
        $.ajax({
            url: '/News/ToggleActivePIN',
            type: 'POST',
            data: { id: id, isActive: isActive },
            success: function (res) {
                if (res.success) {
                    alert('บันทึกสำเร็จ');
                    location.reload();
                } else {
                    alert(res.message || 'เกิดข้อผิดพลาดในการอัปเดตสถานะ');
                    location.reload();
                }
            },
            error: function () {
                alert('เกิดข้อผิดพลาดในการอัปเดตสถานะ');
                location.reload();
            }
        });
    }
</script>

